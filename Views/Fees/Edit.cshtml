    </div>
</div>
</div>

<div class="container mt-4">
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
