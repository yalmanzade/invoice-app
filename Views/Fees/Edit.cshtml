@model invoice.Models.Fee

@{
    ViewData["Title"] = "Edit Fee";
}
<section class="container">
<div class="container">
    <h1>Edit</h1>
    
    <h4>Fee</h4>
    <hr />
</div>
<div class="container">
    <div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
